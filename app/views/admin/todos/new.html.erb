
<h1><%= @user.full_name %>様のTodoリスト作成</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th style="font-size: 20px;">Todo</th>
     

    </tr>
  </thead>


  <tbody>
    <% @todos.each do |todo| %>
    <tr>
      <td>
      
      <%= todo.todo %>
      </td>
     
    </tr>
    <% end %>
  </tbody>
</table>


<%= link_to '一覧へ戻る', admin_user_todos_path(@user), class: "btn btn-info"  %>
<div class="d-flex justify-content-center">
<%= form_with model: @todo, url: admin_user_todos_path(@user) do |f| %>
<div class="field">
  <%= f.label :Todo %><br>
  <%= f.text_area :todo %>
</div>

<div class="actions">
  <%= f.submit :投稿 %>
</div>
<% end %>

</div>
</div>