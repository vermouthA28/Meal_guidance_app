<h1><%= @user.full_name %>様のTodoリスト作成</h1>

<%= link_to '一覧へ', admin_user_todos_path(@user) %>

<%= form_with model: @todo, url: admin_user_todos_path(@user) do |f| %>
<div class="field">
  <%= f.label :Todo %><br>
  <%= f.text_area :todo %>
</div>

<div class="actions">
  <%= f.submit :投稿 %>
</div>
<% end %>

