<h2><%= @user.full_name %>様のTodoリスト編集</h2>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">




      <%= form_with model: @todo, url: admin_user_todo_path(@user, @todo), class: "mt-5" do |f| %>
        <div class="form-group">
          <%= f.label :todo, class: "form-label h4" %>
          <%= f.text_area :todo, class: "form-control", rows: 3 %>
        </div>

        <div class="form-group">
          <%= f.submit "更新", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= link_to '一覧へ戻る', admin_user_todos_path(@user, @todo), class: "btn btn-primary mb-3 col-2" %>
    </div>
  </div>
</div>
