<h1><%= @user.full_name %>様のTodoリスト編集</h1>

<%= link_to '一覧へ', admin_user_todos_path(@user,@todo) %>

<%= form_with model: @todo, url: admin_user_todo_path(@user, @todo) do |f| %>

<div class="field">
  <%= f.label :Todo %><br>
  <%= f.text_area :todo %>
</div>


<div class="actions">
  <%= f.submit :更新 %>
</div>
<% end %>