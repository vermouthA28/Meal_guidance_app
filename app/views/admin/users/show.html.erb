<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5"><%= @user.full_name %>さんの会員詳細</h4>
      <div class="d-flex align-items-center">
        <table class="table table-borderless">
          <tr>
            <th>会員ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>氏名</td>
            <td><%= @user.last_name %>　<%= @user.first_name %></td>
          </tr>
         
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>

          <tr>
            <th>会員ステータス</th>
            <td>
              <% if @user.is_active %>
                <span class="text-success">有効</span>
              <% else %>
                <span class="text-secondary">退会</span>
              <% end %>
               </td>
          </tr>

          <tr>
            <td></td>
            <td><%= link_to "編集する", edit_admin_user_path, class:"btn btn-success" %>
            <%= link_to "投稿一覧を見る", posts_path(@user), class:"btn btn-primary" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>