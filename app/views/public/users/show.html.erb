<section class="inner">
  <h2 class="section-ttl">マイページ</h2>
  <div class="row col-8 mt-2 mx-auto">
    <div class="col-4">
      <h3>登録情報</h3>
    </div>
    <table class="table table-bordered bg-white">
      <tbody>
        <tr>
          <th class="table-primary col-4">名前</th>
          <td><%= @user.last_name %> <%= @user.first_name %></td>
        </tr>

        <tr>
          <th class="table-primary col-4">メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th class="table-primary col-4">担当栄養士</th>
          <td><%= @user.admin.full_name %>
              <%= link_to 'chatを始める', chat_path(@user.id), class: "ml-3" %>
          </td>



        </tr>
        <tr>

        </tr>
      </tbody>
    </table>
  </div>
</section>

 <% if @user.email != "guest@example.com" %>
      <div class="d-flex justify-content-center">
        <div class="col-4">
          <%= link_to "編集する", edit_user_path(current_user), class: "btn btn-primary btn-block" %>
        </div>
        <div class="col-4">
          <%= link_to "パスワードを変更する", edit_user_registration_path, class: "btn btn-primary btn-block" %>
        </div>
      </div>
    <% end %>

