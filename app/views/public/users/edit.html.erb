
<section class="inner">
	<h2 class="section-ttl">会員情報編集</h2>
	<%= form_with model:@user, url: user_path do |f| %>
		<%= render 'layouts/error_messages', resource: @user %>
		<table class="customer_info customer_form">
			<thead>
				<th></th>
				<th></th>
				<th></th>
			</thead>
			<tbody>
				<tr>
					<td>名前</td>
					<td><%= f.label :last_name, "(姓)", class: "user_name" %> <%= f.text_field :last_name, :placeholder =>"#{@user.last_name}" %></td>
					<td><%= f.label :first_name, "(名)", class: "user_name" %> <%= f.text_field :first_name, :placeholder =>"#{@user.first_name}" %></td>
				</tr>

				<tr>
					<td><%= f.label :email, "メールアドレス" %></td>
					<td colspan="2"><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@user.email}" %></td>
				</tr>

				<tr>
					<td colspan="2"><%= f.submit "編集内容を保存する", class: "btn btn-primary" %></td>
					<td><%= link_to "退会する",  users_confirm_withdraw_path, class: "btn btn-danger" %></td>
				</tr>
			</tbody>
		</table>
	<% end %>
</section>