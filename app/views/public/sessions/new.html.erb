 <%= flash[:alert] %>

<div class="box2 d-flex justify-content-center align-items-center">
  <div class="box-inner">

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <h2>ログイン</h2>


  <div class="box-email">
    <%= f.label :email, "Eメール" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="box-password">
    <div class="a-row">
      <div class="column-left">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

        <% if devise_mapping.rememberable? %>
          <div class="remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログインしたままにする" %>
          </div>
        <% end %>

          <div class="actions">
            <%= f.submit "ログイン" %>
          </div>
    <% end %>


      <div class="box-newusr" style="margin-top: 50px;">
        <p>新しいお客様ですか？</p>
        <%= link_to "新規登録", new_user_registration_path %>
      </div>
    </div>
  </div>
