
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="box1 d-flex justify-content-center align-items-center">
      <div class="box-inner ">
        <div class="box-inner">
          <%= form_with model: @user, url: user_session_path, local: true, style: "width: 100%;" do |f| %>
            <h2>ログイン</h2>

            <div class="box-email">
              <%= f.label :email, "Eメール" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "30" %>
            </div>

            <div class="box-password">
              <div class="a-row">
                <div class="column-left">
                  <%= f.label :password, "パスワード(6文字以上)" %><br />
                  <%= f.password_field :password, autocomplete: "off" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="remember">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, "ログインしたままにする" %>
                  </div>
                <% end %>

                <div class="actions mt-2">
                  <%= f.submit "ログイン" %>
                </div>
              </div>
            </div>
          <% end %>

          <div class="box-newusr">
            <p>新しいお客様は<%= link_to "新規登録", new_user_registration_path %>へ</p>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>


