<div class="chat-messages">
  <% chats.each do |chat| %>
    <% if chat.user_id == current_user.id %>
      <div class="message self">
        <div class="message-sender"><%= chat.user.full_name %> 様</div>
          <div class="message-body">
            <%= chat.message %>
          </div>
            <div class="message-destroy"><%= link_to '削除', chat_path(chat.id), method: :delete, data: { confirm: '本当に削除しますか?' } %></div>
        </div>
    <% else %>
      <div class="message other">
        <div class="message-sender"><%= chat.admin.full_name %></div>
        <div class="message-body">
          <%= chat.message %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>