<%= render 'layouts/flash' %>
<div class='container px-5 px-sm-0'>
   <div class='row'>
     <div class='col-md-8'>
      <table class="table table-striped">
          <thead>
            <tr>
              <th>Todo</th>
            </tr>
          </thead>
          <tbody>
            <%# if @todos.present? %>
              <% @todos.each do |todo| %>
                <tr>
                  <td>
                    <%= check_box_tag 'todos[]', todo.id %>
                    <%= todo.todo %>
                  </td>
                </tr>
              <% end %>
            <%# end %>

      </table>
      </div>

    <div class='col-md-4'>
  <div>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
<div>
      <h1>【食事記録】</h1>

      <%= form_with model: @post, local: true do |f| %>
        <h4>日時</h4>
        <%= f.datetime_field :eaten_at %>

        <h4>ジャンル</h4>
        <%= f.collection_radio_buttons :genre_id, [["朝食", "breakfast"], ["昼食", "lunch"], ["夕食", "dinner"], ["間食", "snack"]], :last, :first %>



        <h4>食事内容</h4>
        <%= f.text_area :meal_content %>

        <h4>画像</h4>
        <%= f.file_field :image, accept: "image/*" %>

        <%= f.submit '投稿' %>
      <% end %>
      </div>

    </div>
  </div>
</div>