<%= flash[:notice] %>
<div class='container px-5 px-sm-0'>
   <div class='row'>
     <div class='col-md-8 offset-md-1'>
      <table class="table table-striped">
          <thead>
            <tr>
              <th>Todo</th>
            </tr>
          </thead>
          <tbody>
            <% @todos.each do |todo| %>
            <tr>
              <td>
              <%= check_box_tag 'todos[]', todo.id %>
              <%= todo.todo %>
              </td>
            </tr>
            <% end %>
          </tbody>
      </table>
      </div>
      
     <div class='col-md-3'>
      <h1>【食事記録】</h1>
      
      <%= form_with model: @post do |f| %>
        <h4>日時</h4>
        <%= f.datetime_field :eaten_at %>
      
        <h4>ジャンル</h4>
        <%= f.collection_radio_buttons :genre_id, [["朝食", "breakfast"], ["昼食", "lunch"], ["夕食", "dinner"], ["間食", "snack"]], :last, :first %>
      <%#= f.select :genre_id, Post.genres.keys, {prompt: '選択してください'}, class: 'form-control btn btn-info' %>
      
        <h4>食事内容</h4>
        <%= f.text_area :meal_content %>
      
        <h4>画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
      
        <%= f.submit '投稿' %>
      <% end %>
      
    </div>
  </div>
</div>